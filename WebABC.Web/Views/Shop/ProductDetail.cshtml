@model ProductDto
@{
    IEnumerable<ProductDto> relatedProducts = ViewBag.RelatedProducts;
}
<!-- Breadcrumb Section Begin -->
<div class="breacrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text product-more">
                    <a href="./home.html"><i class="fa fa-home"></i> Home</a>
                    <a href="./shop.html">Shop</a>
                    <span>Detail</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section Begin -->
<!-- Product Shop Section Begin -->
<section class="product-shop spad page-details">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                @await Component.InvokeAsync("TypeProduct")
                <partial name="../Shared/Components/_Type.cshtml">

            </div>
            <div class="col-lg-9">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="product-pic-zoom">
                            <img class="product-big-img" src="~/publics/img/products/@Model.Image" style="height:520px;width:440px" alt="">
                            <div class="zoom-icon">
                                <i class="fa fa-search-plus"></i>
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-6">
                        <div class="product-details">
                            <div class="pd-title">
                                <span>@Model.Unit</span>
                                <h3>@Model.Name</h3>
                                <a href="#" class="heart-icon"><i class="icon_heart_alt"></i></a>
                            </div>
                            <div class="pd-desc">
                                <p>
                                    @Model.Description
                                </p>
                                <h4>
                                    @if (Model.UnitPrice != 0)
                                    {
                                        @Model.PromotionPrice.ToString("c")
                                        <span>@Model.UnitPrice.ToString("c")</span>
                                    }
                                    else
                                    {
                                        @Model.PromotionPrice.ToString("c")
                                    }
                                </h4>
                            </div>
                            <div class="quantity w-icon">
                                <div class="pro-qty">
                                    <input type="text" value="1">
                                </div>
                                <a data-item="@Model.Id" class=" item primary-btn pd-cart">Add To Cart</a>
                            </div>
                            <ul class="pd-tags">
                                <li><span>CATEGORIES</span>@ViewData["Category"]</li>
                                <li><span>TAGS</span>: @Model.Unit</li>
                            </ul>
                            <div class="pd-share">
                                <div class="pd-social">
                                    <a href="#"><i class="ti-facebook"></i></a>
                                    <a href="#"><i class="ti-twitter-alt"></i></a>
                                    <a href="#"><i class="ti-linkedin"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Product Shop Section End -->
<!-- Related Products Section End -->
<div class="related-products spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Related Products</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in relatedProducts)
            {
                <div class="col-lg-3 col-sm-6">
                    <partial name="../Shared/Components/_Product.cshtml" model="item" />
                </div>
            }
        </div>
    </div>
</div>
<!-- Related Products Section End -->

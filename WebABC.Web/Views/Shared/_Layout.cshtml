    @RenderSection("Scripts", required: false)
    <script>
        $(document).ready(function () {
            viewItemCartCheckOut()
        })
        const viewItemCartCheckOut = () => {
            $.ajax({
                url: "/shop/getitemcart",
                data: {
                },
                success: function (data) {
                    var result = data
                    if (result.length != 0) {
                        var tatol = 0;
                        data.map(function (item) {
                            var context = "<li class=\"fw-normal\">" + item.name + " x " + item.qty + "<span>$" + item.total + ".00</span></li>"
                            $(".order-table-item").append(context)
                            tatol = tatol + (item.price * item.qty);
                        })
                        $(".total-price-span").text("$"+tatol+".00");
                    }
                },
            })
        }
        $(document).ready(function () {
            viewCartItem();
            var arrUri = ["home", "shop", "introduce", "contact"]
            var uri = $(location).attr("href");
            var result = "";
            arrUri.map(function (item) {

                if (uri.toLowerCase().includes(item.toLowerCase())) {
                    result = item;
                }
            })
            if (result == "") {
                $(".home").addClass("active");
            } else {
                $("." + result).addClass("active");
            }

        });

        $(document).ready(function () {
            $(".filter-control ul li").on("click", function () {
                var tag = $(this).text();
                $(".filter-control ul li").removeClass("active");
                $(this).addClass("active");

            });
        })

        var id = $(this).data("item");
        $(document).ready(function () {

            $(".w-icon .item").on("click", function () {
                $.ajax({
                    url: "/shop/addtocart",
                    data: {
                        id: $(this).data("item"),
                        qty: 1,
                        type: "ajax"
                    },
                    success: function (data) {
                        var result = data.length

                        Swal.fire({
                            icon: 'success',
                            title: 'Add product success',
                            showConfirmButton: false,
                            timer: 2500
                        });

                        viewCartItem();
                    },
                    error: function () {
                        Swal.fire({
                            icon: 'error',
                            title: 'Add product error',
                            text: 'Add to cart',
                            showConfirmButton: false,
                            timer: 2500
                        });
                    }
                })
            })
        });
        const viewCartItem = () => {
            $.ajax({
                url: "/shop/getitemcart",
                data: {
                },
                success: function (data) {
                    var result = data
                    if (result.length != 0) {
                        var data = result;
                        var tatol = 0;
                        var number_cart = 0;
                        $(".cart-item").remove();
                        data.map(function (item) {
                            var context = "<tr class=\"cart-item\"> <td class=\"si-pic\"><img src=\"publics/img/products/" + item.image + "\" alt=\"\"></td> <td class=\"si-text\"><div class=\"product - selected\"><p>$" + item.price + ".00 x " + item.qty + "</p> <h6>" + item.name + "</h6></div></td>/tr>";
                            addItem("#cart", context);
                            tatol = tatol + (item.price * item.qty);
                            number_cart = number_cart + 1;
                        })
                        $(".total").text("$" + tatol + ".00");
                        $(".number_cart").text(number_cart);
                    }
                },
            })
        }
        $(document).ready(function () {
            $(".ti-close").on("click", function () {
                $.ajax({
                    url: "/shop/DeleteItemCart",
                    data: {
                        id: $(this).data("item"),
                    },
                    success: function (data) {
                        location.reload();
                        viewCartItem();
                    },
                    error: function () {
                        Swal.fire({
                            icon: 'error',
                            title: 'Delete product error',
                            showConfirmButton: false,
                            timer: 2500
                        });
                    }
                })
            })
        })
        const addItem = (key, value) => {
            $(key).append(value)
        }

    </script>
</body>
